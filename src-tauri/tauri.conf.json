{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "DChatt",
  "version": "../package.json",
  "identifier": "com.dchatt.app",
  "build": {
    "beforeDevCommand": "pnpm vite --host",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Updater",
        "width": 350,
        "height": 500,
        "transparent": true,
        "resizable": false,
        "decorations": false,
        "center": true,
        "label": "splash",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM0MjlBRjlCQzhDMDlGQTYKUldTbW44REltNjhwTk43NUdxajg3QVBEV3Y3RUlpMGhzc0J4bml1RFd5UE5Kdk0waGZ2SnlVNCsK",
      "endpoints": [
        "https://github.com/dchat-app/application/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "rpm", "deb", "app", "dmg", "appimage"],
    "createUpdaterArtifacts": true,
    "category": "SocialNetworking",
    "android": {
      "minSdkVersion": 30
    },
    "copyright": "Copyright Â© 2024 DChatt",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "windows": {
      "allowDowngrades": false,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    },
    "publisher": "DChatt",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
